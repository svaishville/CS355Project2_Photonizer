<% include header %>
<body>
<% include menu %>
<h1> Photo Properties </h1>
	<form method="Post" action="/photo/save"> 
	<input type="hidden" name="photoid" id="photoid" value="<%= photoid %>"/>
		<table>
			<tr><td>User:</td>
				<td><select id="userid" name="userid">
					<% for (var i=0; users.length > i; i++) { %>
						<% if(users[i].UserID == userid) { %>
							<option value="<%= users[i].UserID %>" selected>
								<%= users[i].Username %>
							</option>
						<% } else { %>
							<option value="<%= users[i].UserID %>">
								<%= users[i].Username %>
							</option>
						<% } %>
					<% } %>
				</select></td>
			</tr>
			<tr><td>Filename:</td>
				<td><input type="text" id="fname" name="fname" value="<%= fname %>"/></td>
			</tr>	
			<tr><td>Camera:</td>
				<td><select id="cameraid" name="cameraid">
					<% for (var i=0; cameras.length > i; i++) { %>
						<% if(cameras[i].CameraID == cameraid) { %>
							<option value="<%= cameras[i].CameraID %>" selected>
								<%= cameras[i].Model %>
							</option>
						<% } else { %>
							<option value="<%= cameras[i].CameraID %>">
								<%= cameras[i].Model %>
							</option>
						<% } %>
					<% } %>
				</select></td>
			</tr>
			<tr><td>Lens:</td>
				<td><select id="lensid" name="lensid">
					<% for (var i=0; lenses.length > i; i++) { %>
						<% if(lenses[i].LensID == lensid) { %>
							<option value="<%= lenses[i].LensID %>" selected>
								<%= lenses[i].Model %>
							</option>
						<% } else { %>
							<option value="<%= lenses[i].LensID %>">
								<%= lenses[i].Model %>
							</option>
						<% } %>
					<% } %>
				</select></td>
			</tr>
			<tr><td>Date:</td>
				<td><input type="text" id="date" name="date" value="<%= date %>"/></td>
			</tr>	
			<tr><td>ISO:</td>
				<td><input type="text" id="iso" name="iso" value="<%= iso %>"/></td>
			</tr>	
			<tr><td>FocalLength:</td>
				<td><input type="text" id="focallength" name="focallength" value="<%= focallength %>"/></td>
			</tr>	
			<tr><td>F-stop:</td>
				<td><input type="text" id="fstop" name="fstop" value="<%= fstop %>"/></td>
			</tr>	
			<tr><td>Exposure:</td>
				<td><input type="text" id="exposure" name="exposure" value="<%= exposure %>"/></td>
			</tr>				
		</table>
		<input type="submit" />
	</form>
	
	
	
	
<% include footer %>